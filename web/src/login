import React, { useState } from 'react';

function TicketApp() {
  // 新規登録用の状態
  const [newNickname, setNewNickname] = useState('');
  const [newBirthdate, setNewBirthdate] = useState('');
  const [newAttendees, setNewAttendees] = useState(1);

  // ログイン用の状態
  const [loginNickname, setLoginNickname] = useState('');
  const [loginBirthdate, setLoginBirthdate] = useState('');

  const handleRegister = (e) => {
    e.preventDefault();
    alert(`登録完了！\nニックネーム: ${newNickname}\n生年月日: ${newBirthdate}\n来場者人数: ${newAttendees}`);
  };

  const handleLogin = (e) => {
    e.preventDefault();
    alert(`ログイン成功！\nニックネーム: ${loginNickname}\n生年月日: ${loginBirthdate}`);
  };

  return (
    <div style={styles.container}>
      <h1 style={styles.header}>整理券配布アプリ</h1>
      <h2 style={styles.subheader}>ようこそ！技大祭へ！</h2>
      <p style={styles.instruction}>新規の方は来場者登録をお願いします</p>

      {/* 新規登録フォーム */}
      <form onSubmit={handleRegister} style={styles.form}>
        <label style={styles.label}>
          ニックネーム
          <input
            type="text"
            value={newNickname}
            onChange={(e) => setNewNickname(e.target.value)}
            style={styles.input}
            required
          />
        </label>
        <label style={styles.label}>
          生年月日
          <input
            type="date"
            value={newBirthdate}
            onChange={(e) => setNewBirthdate(e.target.value)}
            style={styles.input}
            required
          />
        </label>
        <label style={styles.label}>
          来場者人数
          <input
            type="number"
            value={newAttendees}
            onChange={(e) => setNewAttendees(e.target.value)}
            style={styles.input}
            min="1"
            required
          />
        </label>
        <button type="submit" style={styles.button}>登録する</button>
      </form>

      <div style={styles.separator}>または</div>

      {/* ログインフォーム */}
      <form onSubmit={handleLogin} style={styles.form}>
        <label style={styles.label}>
          ニックネーム
          <input
            type="text"
            value={loginNickname}
            onChange={(e) => setLoginNickname(e.target.value)}
            style={styles.input}
            required
          />
        </label>
        <label style={styles.label}>
          生年月日
          <input
            type="date"
            value={loginBirthdate}
            onChange={(e) => setLoginBirthdate(e.target.value)}
            style={styles.input}
            required
          />
        </label>
        <button type="submit" style={styles.button}>ログイン</button>
      </form>
    </div>
  );
}

const styles = {
  container: {
    maxWidth: '500px',
    margin: '40px auto',
    padding: '20px',
    border: '1px solid #ddd',
    borderRadius: '10px',
    backgroundColor: '#fff8f0',
    fontFamily: 'sans-serif',
  },
  header: {
    textAlign: 'center',
    fontSize: '24px',
    color: '#ff6600',
    marginBottom: '10px',
  },
  subheader: {
    textAlign: 'center',
    fontSize: '20px',
    marginBottom: '5px',
  },
  instruction: {
    textAlign: 'center',
    marginBottom: '20px',
    color: '#555',
  },
  form: {
    display: 'flex',
    flexDirection: 'column',
    marginBottom: '20px',
  },
  label: {
    marginBottom: '15px',
    fontWeight: 'bold',
  },
  input: {
    padding: '8px',
    fontSize: '16px',
    marginTop: '5px',
    borderRadius: '5px',
    border: '1px solid #ccc',
  },
  button: {
    padding: '10px',
    fontSize: '16px',
    backgroundColor: '#ff6600',
    color: 'white',
    border: 'none',
    borderRadius: '5px',
    cursor: 'pointer',
  },
  separator: {
    textAlign: 'center',
    margin: '10px 0',
    fontWeight: 'bold',
    color: '#999',
  },
};

export default TicketApp;