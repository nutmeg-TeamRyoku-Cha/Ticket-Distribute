import { useForm } from "react-hook-form";
import InputField from "../Atoms/InputField";

const VisitorForm = () => {
  const {
    register,
    handleSubmit,
    formState: { errors },
  } = useForm();

  const onSubmit = (data) => {
    console.log(data);
  };

  return (
    <form onSubmit={handleSubmit(onSubmit)}>
      <InputField
        label="ニックネーム"
        type="text"
        name="nickname"
        register={register("nickname", { required: "必須です" })}
        error={errors.nickname}
        placeholder="例：タマ三郎"
      />

      <InputField
        label="生年月日"
        type="date"
        name="birthdate"
        register={register("birthdate", { required: "必須です" })}
        error={errors.birthdate}
      />

      <InputField
        label="来場者人数"
        type="number"
        name="visitorCount"
        register={register("visitorCount", {
          required: "必須です",
          min: { value: 1, message: "1人以上でお願いします" },
          max: { value: 10, message: "最大10人までです" },
        })}
        error={errors.visitorCount}
        min={1}
        max={10}
      />

      <button type="submit">登録する</button>
    </form>
  );
};

export default VisitorForm;